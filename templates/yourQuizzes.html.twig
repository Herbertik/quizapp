{% extends 'base.html.twig' %}

{% block title %}Tvé Kvízy{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Tvé Kvízy</h1>
        <ul class="list-group">
            {% for quiz in quizzes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('quizResults', {quizId: quiz.id}) }}">{{ quiz.name }}</a>
                    <span class="badge bg-primary">This test was completed: {{ quiz.quizresultscount }} </span>
                </li>
            {% else %}
                <p>Žádné kvízy nebyly nalezeny.</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}