{% extends 'base.html.twig' %}

{% block title %}Vytvořit nový kvíz{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center mb-3">Vytvořit nový kvíz</h1>

                        <form method="post">
                            <div class="d-flex align-items-center mb-4">
                                <label for="quiz_name" class="me-3 mb-0" style="width: 130px;">Název kvízu:</label>
                                <input type="text" id="quiz_name" name="quiz_name" class="form-control" required placeholder="Zadejte název kvízu">
                            </div>

                            <div class="text-center mb-3">
                                <button type="submit" class="btn btn-primary px-5">Vytvořit kvíz</button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <a href="{{ path('mainMenu') }}" class="btn btn-outline-primary">
                                Zpět na hlavní menu
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}