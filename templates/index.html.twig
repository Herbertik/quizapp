{% extends 'base.html.twig' %}

{% block title %}Quiz App{% endblock %}

{% block body %}
<style>
    .example-wrapper code { background: #0000ff; padding: 2px 6px; }
</style>

    <div>
        <form name="quiz" method="post" action="/answers">
            {% for question in questionsData %}
                <div>
                <p>{{ question.question }}</p>
                    {% for answer in question.answers %}
                        <label>
                            {% if question.inputType.value == "checkbox" %}
                                <input type="checkbox" name="{{ question.question }}" value="{{ answer.answer }}">
                            {% else %}
                                <input type="radio" name="{{ question.question }}" value="{{ answer.answer }}">
                            {% endif %}
                        </label> {{ answer.answer }}
                    {% endfor %}
                </div>
            {% endfor %}
            <input type="submit">
        </form>
    </div>
{% endblock %}
