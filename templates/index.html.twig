{% extends 'base.html.twig' %}

{% block title %}Quiz App{% endblock %}

{% block body %}
<style>
    .example-wrapper code { background: #0000ff; padding: 2px 6px; }
</style>

    <div class="container mt-4">

        <div class="mt-4">
            <h4 class="mb-3">Available Quizzes</h4>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
                {% for quiz in quizzes %}
                    <div class="col mb-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">{{ quiz.name }}</h5>
                                <p class="card-text text-muted">Created by: {{ quiz.creator }}</p>
                                <a href="{{ url('quiz', {quizName: quiz.name}) }}" class="btn btn-primary btn-sm">Take Quiz</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="text-center">
            <a href="{{ path('mainMenu', { limit }) }}" class="btn btn-outline-primary">Load next 10</a>
        </div>
    </div>
{% endblock %}
