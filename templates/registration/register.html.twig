{% extends 'base.html.twig' %}

{% block title %}Registrace{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center mb-3">Registrace</h1>

                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'E-mailová adresa'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.nick, {'attr': {'class': 'form-control', 'placeholder': 'Přezdívka'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Heslo',
                                'attr': {'class': 'form-control', 'placeholder': 'Zadejte heslo'}
                            }) }}
                        </div>

                        <div class="d-flex justify-content-center mb-3">
                            <button type="submit" class="btn btn-primary px-5">Registrovat</button>
                        </div>

                        {{ form_end(registrationForm) }}

                        <div class="text-center mt-4">
                            <a href="/login" id="login" class="btn btn-link">
                                Už máte účet? Přihlaste se
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}