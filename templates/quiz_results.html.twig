{% extends 'base.html.twig' %}

{% block title %}Výsledky Kvízu{% endblock %}

{% block body %}
    <div class="container mt-4">
        <a href="{{ path('yourQuizzes') }}" class="btn btn-primary btn-sm">← Zpět na Tvé Kvízy</a>
        <h1>Výsledky Kvízu</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Uživatel</th>
                <th>Procentuální úspěšnost</th>
                <th>Čas odeslání</th>
            </tr>
            </thead>
            <tbody>
            {% for result in results %}
                <tr>
                    <td>{{ result.nick }}</td>
                    <td>{{ result.percentage }}%</td>
                    <td>{{ result.time|date('d.m.Y H:i') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Žádné výsledky k zobrazení.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}